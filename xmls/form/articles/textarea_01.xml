		<_script_>
    $("[data-j-txt]").keyup(function(){
        var txtLimit=$(this).data("j-txt");
        var txtLen=$(this).val().length;
        if(txtLen>=txtLimit){
            $(this).val($(this).val().substr(0,txtLimit));
        }
    })
